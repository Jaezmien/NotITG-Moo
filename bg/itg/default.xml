<ActorFrame><children>

    <!-- Thanks to [Kath] for making the ITG2 Background Generator! -->
    
    <Layer
        File="gradient-back"
        OnCommand="zoomto,melody.SCREEN_WIDTH,melody.SCREEN_HEIGHT"
    />

    <Layer
        File="squares-left"
        OnCommand="horizalign,left;vertalign,bottom;x,-melody.SCREEN_CENTER_X;y,melody.SCREEN_CENTER_Y"
    />
    <Layer
        File="squares-right"
        OnCommand="horizalign,right;vertalign,top;x,melody.SCREEN_CENTER_X;y,-melody.SCREEN_CENTER_Y"
    />

    <Layer
        File="gradient-overlay"
        OnCommand="zoomto,melody.SCREEN_WIDTH,melody.SCREEN_HEIGHT"
    />

    <Layer
        File="_lines"
        OnCommand="zoomto,melody.SCREEN_WIDTH,melody.SCREEN_HEIGHT;diffusealpha,0.4;blend,add"
    />

    <Layer
        File="text"
    />

    <Layer
        Type="Quad"
         OnCommand="zoomto,melody.SCREEN_WIDTH,melody.SCREEN_HEIGHT;diffuse,0,0,0,0.2"
    />

</children></ActorFrame>